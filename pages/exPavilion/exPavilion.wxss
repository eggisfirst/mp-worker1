page {
  background: #f2f2f2;
}

.navBar {
  display: flex;
  justify-content: space-between;
  padding: 38rpx 30rpx 38rpx 30rpx;
  box-sizing: border-box;
  border-top: 1px solid #e1e1e1;
  border-bottom: 1px solid #e1e1e1;
}

.navBar text {
  font-size: 48rpx;
  color: #333;
  font-weight: bold;
}

.time {
  width: 240rpx;
  background-color: #e6e6e6;
  border-radius: 4rpx;
  opacity: 0.96;
  text-align: center;
}

.time .calendar {
  background: url("https://derucci.net/vip/imgs/calendar.png") no-repeat;
  background-size: 100% 100%;
  width: 32rpx;
  height: 32rpx;
}

.time .icon-more1 {
  background: url("https://derucci.net/vip/imgs/more1.png") no-repeat;
  background-size: 100% 100%;
  width: 32rpx;
  height: 14rpx;
}

.time .topBar {
  position: relative;
  justify-content: space-around;
  background: #fff;
  width: 240rpx;
  height: 68rpx;
  border-radius: 4rpx;
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.selectTime {
  position: relative;
}

.select {
  z-index: 100;
  position: absolute;
}

.select_one {
  text-align: center;
  background-color: #e1e1e1;
  width: 240rpx;
  height: 51rpx;
  border-bottom: 1rpx solid #fff;
  opacity: 0.96;
  font-size: 24rpx;
  line-height: 51rpx;
  color: #666;
}

.is_checked {
  background: #fff;
}

.normal {
  background: #e1e1e1;
}

.content {
  width: 720rpx;
  margin-left: 30rpx;
  margin-top: 50rpx;
  font-size: 28rpx;
  color: #333;
}

.content .question {
  line-height: 48rpx;
  margin-bottom: 35rpx
}

.content .options {
  display: flex;
  justify-content: space-between;
  line-height: 60rpx;
  position: relative;
}

.content .option .line {
  border-bottom: 1px solid #e1e1e1;
  width: 720rpx;
  box-sizing: border-box
}
.content .options .num {
  position: absolute;
  right: 0rpx;
  top: 5rpx;
  font-size: 28rpx;
  color: #666;
}
.content .options .percent{
  margin-bottom: 15rpx  
}
.progress{
  border: 1px solid red;
 
}