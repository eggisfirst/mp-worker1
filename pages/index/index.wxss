.loginForm{
  width: 95%;
  align-self: flex-end;
}
.loginForm .content{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  margin-top: 120rpx;
  padding: 50rpx 0 80rpx 0;
  background: url(https://derucci.net/vip/imgs/block1.png) no-repeat;
  background-size: 100% 100%;
}
.loginForm text{
  display: block;
  width: 100%;
  color: #e7cfa7;
  text-align: center;
  font-size: 20px;
  line-height: 2em;
}
.content view{
  display: flex;
  flex-direction: row;
  padding: 20rpx 0;
}
.loginForm label,.loginForm input{
  color: #fff;
  font: 16px;
}
.loginForm input{
  background: url(https://derucci.net/vip/imgs/small.png) no-repeat;
  background-size: auto 100%;
}
.loginForm button{
  margin-top: 100rpx;
  background: none;
  color: #f2ddb2;
}