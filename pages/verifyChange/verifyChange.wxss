.scanBox{
  margin-top: 70rpx;
}
.scanBox button{
  margin-top: 100rpx;
  color: #f2ddb2;
  background: none;
  font-size: 14px;
  line-height: 2.4em;
  height: 2.4em;
  border-radius: 1.2em;
