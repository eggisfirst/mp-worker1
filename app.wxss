/**app.wxss**/

.container {
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background: url(https://derucci.net/vip/imgs/bg.png) no-repeat, rgba(0, 0, 0, .96);
  background-size: 100% auto;
} 
.logo{
  width: 205rpx;
  height: 150rpx;
  margin-top: 60rpx;
  background: url(https://derucci.net/vip/imgs/logo.png) no-repeat;
  background-size: 100% 100%;
}
page{
  height: 100%;
}
button{
  width: 50%;
  height: 60rpx;
  background: none;
  color: #f2ddb2;
  border: 1px solid #f2ddb2;
  border-radius: 35rpx;
  line-height: 60rpx;
  font-weight: 300;
}
button.buttonHover{
  opacity: 0.6;
}