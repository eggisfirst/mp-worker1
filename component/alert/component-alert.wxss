/* 弹框 */
.alertBox{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, .96);
  z-index: 1000;
}
.alert{
  width: 90%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background: rgba(255, 255, 255, .1);
  border-radius: 10px;
  padding: 5vh 0;
}
.alert text, .alert label{
  color: #e7cfa7;
  text-align: center;
  font-size: 24px;
  padding: 50rpx 0;
}
.alert button{
  color: #e7cfa7;
  margin-top: 3vh;
  background: none;
}
.hide{
  display: none;
}
.alert label, .alert input{
  font-size: 20px;
  font-weight: 300;
}
.alert input{
  color: #e7cfa7;
  width: 200rpx;
  background: url(https://derucci.net/vip/imgs/timess.png) no-repeat;
  background-size: 100% 100%;
  margin: 50rpx 0;
}